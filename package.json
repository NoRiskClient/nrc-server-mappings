{
  "name": "nrc-server-mappings",
  "version": "1.0.0",
  "description": "Server manifest validation and management",
  "scripts": {
    "validate-manifest": "node scripts/validate-manifest.js",
    "validate-images": "node scripts/validate-images.js",
    "merge": "node scripts/merge-manifests.js",
    "format": "prettier --write '**/*.json' 'scripts/**/*.js'",
    "format:check": "prettier --check '**/*.json' 'scripts/**/*.js'"
  },
  "devDependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "prettier": "^3.7.4"
  }
}
